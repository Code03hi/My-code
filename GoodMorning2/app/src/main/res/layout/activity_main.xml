<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:accessibilityPaneTitle=""
    android:background="@android:color/holo_red_light"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/Mornning"
        android:layout_width="161dp"
        android:layout_height="60dp"
        android:text="Good Morning"
        android:backgroundTint="@android:color/holo_orange_light"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.9"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.672" />

    <Button
        android:id="@+id/Night"
        android:layout_width="161dp"
        android:layout_height="60dp"
        android:layout_marginBottom="220dp"
        android:text="Good Night"
        android:backgroundTint="@android:color/holo_orange_light"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/Mornning"
        app:layout_constraintHorizontal_bias="0.55"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:layout_width="308dp"
        android:layout_height="83dp"
        android:text="Welcome to Good Morning And Good Night View Platform"
        android:textAlignment="center"
        android:backgroundTint="@android:color/holo_purple"
        android:textColor="@android:color/holo_green_dark"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.455"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.186" />

    <EditText
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="80dp"
        android:text="Please Enter Any one Button Mention Below"
        android:textAlignment="center"
        android:textColor="@android:color/holo_orange_dark"
        android:textColorHint="@android:color/black"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_editor_absoluteX="200dp"
        app:layout_editor_absoluteY="300dp"
        tools:layout_editor_absoluteY="292dp" />

    <EditText
        android:layout_width="185dp"
        android:layout_height="45dp"
        android:layout_marginStart="124dp"
        android:layout_marginBottom="104dp"
        android:text="This is app my second App"
        android:textAlignment="center"
        android:textSize="15dp"
        android:textColor="@android:color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>

